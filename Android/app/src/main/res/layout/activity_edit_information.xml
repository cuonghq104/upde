<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".screen.editinfo.EditInformationActivity">

    <stp.cuonghq.upde.commons.AppToolbar
        android:id="@+id/toolbar"
        app:titleOrientation="center"
        app:left_src="@drawable/ic_left_arrow"
        app:toolbar_theme="primary"
        app:title="@string/title_edit_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/margin_component"
        android:paddingEnd="20dp"
        android:paddingBottom="@dimen/margin_component">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_name"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <androidx.appcompat.widget.AppCompatEditText
                android:maxLength="32"
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/margin_form"
                android:paddingBottom="@dimen/margin_form"
                android:textSize="@dimen/ts_form_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="@string/title_phone"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <androidx.appcompat.widget.AppCompatEditText
                android:maxLength="20"
                android:id="@+id/edt_phone"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/margin_form"
                android:paddingBottom="@dimen/margin_form"
                android:textSize="@dimen/ts_form_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp"
                android:text="@string/title_password"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/margin_form"
                android:paddingBottom="@dimen/margin_form"
                android:text="@string/title_change_password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/ts_form_edit"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_app_button"
            android:text="Save"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>