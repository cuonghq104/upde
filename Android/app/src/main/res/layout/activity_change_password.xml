<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".screen.changepassword.ChangePasswordActivity">

    <stp.cuonghq.upde.commons.AppToolbar
        android:id="@+id/toolbar"
        app:left_src="@drawable/ic_left_arrow"
        app:titleOrientation="center"
        app:title="@string/title_change_password"
        app:toolbar_theme="primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/margin_component"
        android:paddingEnd="20dp"
        android:paddingBottom="@dimen/margin_component">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_old_password"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingTop="@dimen/margin_form"
                    android:paddingBottom="@dimen/margin_form"
                    android:textSize="@dimen/ts_form_edit" />

                <ImageButton
                    android:id="@+id/btn_hide_old_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_component"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_visibility_black_24dp"
                    android:tint="@color/colorHint" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_new_password"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingTop="@dimen/margin_form"
                    android:paddingBottom="@dimen/margin_form"
                    android:textSize="@dimen/ts_form_edit" />

                <ImageButton
                    android:id="@+id/btn_hide_new_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_component"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_visibility_black_24dp"
                    android:tint="@color/colorHint" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_bottom_dark"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_confirm_password"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/ts_form_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="32"
                    android:paddingTop="@dimen/margin_form"
                    android:paddingBottom="@dimen/margin_form"
                    android:textSize="@dimen/ts_form_edit" />

                <ImageButton
                    android:id="@+id/btn_hide_confirm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_component"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_visibility_black_24dp"
                    android:tint="@color/colorHint" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_app_button"
            android:text="@string/title_save_changed"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</LinearLayout>